%h1 Create Post

.form
  = form_for workshop do |f|
    %fieldset
      %dl

        %dt= f.label :publisher
        %dd= f.text_field :publisher

        %dt= f.label :publish_date
        %dd= f.date_field :publish_date

        %dt= f.label :title
        %dd= f.text_field :title

        %dt= f.label :powerpoint_link
        %dd= f.text_field :powerpoint_link

        %dt= f.label :embed_url, 'Youtube Embedded Url (optional)'
        %dd= f.text_field :embed_url

        %dt= f.label :show_notes
        %dd= f.text_area :show_notes

    %fieldset.actions
      = f.submit 'Create Post'
