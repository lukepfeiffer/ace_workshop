%head
  %title AceWorkshop
  = csrf_meta_tags
  = stylesheet_link_tag    'application', media: 'all'
  = javascript_include_tag 'application'
  %link{href:'https://fonts.googleapis.com/css?family=Varela+Round', rel:'stylesheet', type: 'text/css'}
%body#main
  .main-content
    %nav.navigation
      .header-image= link_to((image_tag 'gatorace.png'), root_path)
      .actions
        = link_to 'Home', root_path
        = link_to 'About', about_path
        = link_to 'Contact', contact_path
        = link_to 'Sign out', sign_out_path, method: :delete if current_user.present?

    .page-content
      .special
        %h1#main-header= link_to 'ACE Workshops', root_path
      = yield

      %nav.footer{role: 'contentinfo'}
        .links
          .social
            %li= link_to(image_tag('gatorace.png', alt: 'twitter'), 'http://gatorace.org/', target: '_blank')
            %li= link_to(image_tag('facebook.png', alt: 'facebook'), 'https://www.facebook.com/GatorACE/?fref=ts', target: '_blank')
